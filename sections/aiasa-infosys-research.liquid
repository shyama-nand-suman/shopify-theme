{% schema %}
{
  "name": "AIASA â€“ Infosys Research",
  "enabled_on": { "templates": ["page"] },
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Infosys Research"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "Exclusive report on the impact of digital disruption across industries."
    }
  ],
  "blocks": [
    {
      "type": "card",
      "name": "Research Card",
      "settings": [
        { "type": "text", "id": "title", "label": "Title" },
        { "type": "image_picker", "id": "image", "label": "Image" },
        {
          "type": "color",
          "id": "bg",
          "label": "Background color",
          "default": "#ffffff"
        },
        { "type": "url", "id": "link", "label": "Read more link" }
      ]
    }
  ],
  "max_blocks": 6,
  "presets": [
    {
      "name": "AIASA â€“ Infosys Research",
      "blocks": [
        { "type": "card" },
        { "type": "card" },
        { "type": "card" },
        { "type": "card" },
        { "type": "card" },
        { "type": "card" }
      ]
    }
  ]
}
{% endschema %}

<section class="aiasa-research">
  <div class="aiasa-research-inner">

    <div class="aiasa-research-head">
      <h2>{{ section.settings.heading }}</h2>
      <p>{{ section.settings.subheading }}</p>
    </div>

    <div class="aiasa-research-grid">
      {% for block in section.blocks %}
        <div
          class="aiasa-research-card"
          style="background: {{ block.settings.bg }}"
          {{ block.shopify_attributes }}
        >

          {% if block.settings.image %}
            {% assign img = block.settings.image %}
            <div class="aiasa-research-image">
              <img
                src="{{ img | image_url: width: 600 }}"
                width="{{ img.width }}"
                height="{{ img.height }}"
                alt="{{ block.settings.title }}"
                loading="lazy"
              >
            </div>
          {% endif %}

          <div class="aiasa-research-content">
            <h3>{{ block.settings.title }}</h3>

            {% if block.settings.link != blank %}
              <a href="{{ block.settings.link }}">READ MORE</a>
            {% endif %}
          </div>

        </div>
      {% endfor %}
    </div>

    <div class="aiasa-research-cta">
      <a href="#" class="aiasa-btn">SEE MORE</a>
    </div>

  </div>
</section>

<style>
/* ===== SECTION ===== */
.aiasa-research {
  padding: 120px 60px;
  background: #ffffff;
}

.aiasa-research-inner {
  max-width: 1200px;
  margin: auto;
}

/* ===== HEADER ===== */
.aiasa-research-head {
  text-align: center;
  margin-bottom: 60px;
}

.aiasa-research-head h2 {
  font-size: 36px;
  font-weight: 700;
}

.aiasa-research-head p {
  font-size: 16px;
  color: #666;
  margin-top: 10px;
}

/* ===== GRID ===== */
.aiasa-research-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 20px;
}

/* ===== CARD ===== */
.aiasa-research-card {
  position: relative;
  min-height: 260px;
  overflow: hidden;
}

/* ===== IMAGE ===== */
.aiasa-research-image {
  overflow: hidden;
}

.aiasa-research-image img {
  width: 100%;
  height: 100%;
  object-fit: cover;
  transition: transform 0.6s ease;
}

/* ðŸ”¥ IMAGE HOVER UPâ€“DOWN */
.aiasa-research-card:hover img {
  transform: translateY(-12px);
}

/* ===== CONTENT ===== */
.aiasa-research-content {
  padding: 20px;
}

.aiasa-research-content h3 {
  font-size: 15px;
  font-weight: 600;
  margin-bottom: 10px;
}

.aiasa-research-content a {
  font-size: 13px;
  font-weight: 700;
  text-decoration: none;
  color: #000;
  border-bottom: 2px solid #000;
}

/* ===== CTA ===== */
.aiasa-research-cta {
  text-align: center;
  margin-top: 50px;
}

.aiasa-btn {
  display: inline-block;
  padding: 12px 28px;
  border: 1px solid #000;
  font-size: 13px;
  font-weight: 700;
  text-decoration: none;
  color: #000;
}

/* ===== MOBILE ===== */
@media (max-width: 900px) {
  .aiasa-research {
    padding: 80px 25px;
  }

  .aiasa-research-grid {
    grid-template-columns: 1fr;
  }
}
</style>
