<style>
/* ===============================
   FOOTER
================================ */
.infosys-footer {
  background: #ffffff;
  border-top: 1px solid #e5e5e5;
  font-family: inherit;
}

.footer-top {
  max-width: 1400px;
  margin: 0 auto;
  padding: 80px 60px;
  display: grid;
  grid-template-columns: repeat(5, 1fr);
  gap: 60px;
}

.footer-col h4 {
  font-size: 18px;
  font-weight: 700;
  margin-bottom: 25px;
  color: #000;
}

.footer-col ul {
  list-style: none;
  padding: 0;
  margin: 0;
}

.footer-col li {
  margin-bottom: 14px;
}

.footer-col a {
  color: #000;
  text-decoration: none;
  border-bottom: 1px solid #000;
  padding-bottom: 2px;
  font-size: 15px;
}

.footer-col a:hover {
  opacity: 0.7;
}

/* SOCIAL */
.footer-social {
  display: flex;
  gap: 18px;
  margin-bottom: 25px;
}

.footer-social a {
  font-size: 18px;
  text-decoration: none;
  color: #000;
  border: none;
}

/* SELECT */
.footer-select {
  width: 100%;
  padding: 12px;
  border: 1px solid #ccc;
  font-size: 14px;
}

/* BOTTOM */
.footer-bottom {
  border-top: 1px solid #e5e5e5;
  padding: 25px 60px;
  text-align: left;
  font-size: 14px;
  color: #666;
}

/* ===============================
   MOBILE
================================ */
@media (max-width: 1000px) {
  .footer-top {
    grid-template-columns: repeat(2, 1fr);
  }
}

@media (max-width: 600px) {
  .footer-top {
    grid-template-columns: 1fr;
    padding: 50px 25px;
  }

  .footer-bottom {
    padding: 20px 25px;
  }
}
</style>
