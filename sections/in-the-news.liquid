{% schema %}
{
  "name": "In the News",
  "settings": [],
  "blocks": [
    {
      "type": "news",
      "name": "News Item (Left)",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "News title"
        },
        {
          "type": "url",
          "id": "link",
          "label": "News link"
        }
      ]
    },
    {
      "type": "card",
      "name": "Image Card (Right)",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Card image"
        },
        {
          "type": "text",
          "id": "heading",
          "label": "Card heading"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "In the News",
      "blocks": [
        { "type": "news" },
        { "type": "news" },
        { "type": "news" },
        { "type": "card" },
        { "type": "card" },
        { "type": "card" },
        { "type": "card" }
      ]
    }
  ]
}
{% endschema %}

<section class="news-wrapper">

  <!-- LEFT COLUMN -->
  <div class="news-left">
    <span class="news-brand">Infosys</span>
    <h2>In the news</h2>

    <div class="news-list">
      {% for block in section.blocks %}
        {% if block.type == 'news' %}
          <a href="{{ block.settings.link }}" class="news-item">
            <span>{{ block.settings.title }}</span>
            <span class="arrow">â†’</span>
          </a>
        {% endif %}
      {% endfor %}
    </div>
  </div>

  <!-- RIGHT GRID -->
  <div class="news-right">
    {% for block in section.blocks %}
      {% if block.type == 'card' %}
        <div class="news-card">
          {% if block.settings.image %}
            <img
              src="{{ block.settings.image | image_url: width: 1600 }}"
              alt="{{ block.settings.heading }}"
              width="800"
              height="600"
              loading="lazy"
            >
          {% endif %}

          <div class="news-overlay">
            <h3>{{ block.settings.heading }}</h3>
          </div>
        </div>
      {% endif %}
    {% endfor %}
  </div>

</section>

<style>
/* ================= IN THE NEWS ================= */

.news-wrapper {
  display: grid;
  grid-template-columns: 38% 62%;
  min-height: 720px;
  width: 100%;
}

/* ---------- LEFT SIDE ---------- */
.news-left {
  background: #a56608;
  color: #fff;
  padding: 80px 60px;
}

.news-brand {
  font-size: 22px;
  margin-bottom: 30px;
  display: block;
}

.news-left h2 {
  font-size: 48px;
  font-weight: 800;
  margin-bottom: 50px;
}

.news-list {
  display: flex;
  flex-direction: column;
  gap: 36px;
}

.news-item {
  color: #fff;
  text-decoration: none;
  font-size: 20px;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.news-item:hover {
  opacity: 0.85;
}

/* ---------- RIGHT GRID ---------- */
.news-right {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
}

/* CARD */
.news-card {
  position: relative;
  overflow: hidden;
}

/* IMAGE */
.news-card img {
  width: 100%;
  height: 100%;
  object-fit: cover;
  transition: transform 0.6s ease;
  position: relative;
  z-index: 1;
}

/* OVERLAY */
.news-overlay {
  position: absolute;
  inset: 0;
  z-index: 2;
  background: linear-gradient(
    to top,
    rgba(0,0,0,0.85),
    rgba(0,0,0,0.45),
    transparent
  );
  display: flex;
  align-items: flex-end;
  padding: 30px;
}

/* TEXT ON IMAGE */
.news-overlay h3 {
  color: #ffffff;
  font-size: 26px;
  font-weight: 700;
  line-height: 1.3;
  position: relative;
  z-index: 3;
}

/* HOVER EFFECT */
.news-card:hover img {
  transform: scale(1.08);
}

.news-card:hover .news-overlay {
  background: linear-gradient(
    to top,
    rgba(0,0,0,0.95),
    rgba(0,0,0,0.6),
    transparent
  );
}

/* ---------- MOBILE ---------- */
@media (max-width: 900px) {
  .news-wrapper {
    grid-template-columns: 1fr;
  }

  .news-right {
    grid-template-columns: 1fr;
  }

  .news-left {
    padding: 60px 30px;
  }

  .news-left h2 {
    font-size: 36px;
  }
}
</style>
