{% schema %}
{
  "name": "AIASA Hero Overlay",
  "enabled_on": {
    "templates": ["page"]
  },
  "settings": [
    {
      "type": "image_picker",
      "id": "bg_image",
      "label": "Background image"
    },
    {
      "type": "image_picker",
      "id": "right_image",
      "label": "Right diagram image"
    },
    {
      "type": "text",
      "id": "breadcrumb",
      "label": "Top small text",
      "default": "Navigate your next"
    },
    {
      "type": "textarea",
      "id": "heading",
      "label": "Main heading",
      "default": "Navigate Your Next to Evolve your Organization into an AI-first Enterprise"
    }
  ],
  "presets": [
    {
      "name": "AIASA – Hero Overlay"
    }
  ]
}
{% endschema %}

<section class="aiasa-hero-overlay">
  {% if section.settings.bg_image %}
   {% assign bg = section.settings.bg_image %}
  <img
    class="aiasa-bg"
    src="{{ bg | image_url: width: 3000 }}"
    alt="AIASA background"
    width="{{ bg.width }}"
    height="{{ bg.height }}"
    loading="eager"
  >
{% endif %}

  <div class="aiasa-overlay"></div>

  <div class="aiasa-content">
    <!-- LEFT -->
    <div class="aiasa-left">
      <span class="aiasa-breadcrumb">
        {{ section.settings.breadcrumb }}
      </span>

      <h1>
        {{ section.settings.heading }}
      </h1>
    </div>

    <!-- RIGHT -->
    <div class="aiasa-right">
      {% if section.settings.right_image %}
        {% assign img = section.settings.right_image %}
        <img
          src="{{ img | image_url: width: 1000 }}"
          alt="AI-first operating model"
          width="{{ img.width }}"
          height="{{ img.height }}"
          loading="lazy"
        >
      {% endif %}
    </div>
  </div>
</section>

<style>
/* ===============================
   AIASA HERO OVERLAY (FINAL)
================================ */

.aiasa-hero-overlay {
  position: relative;
  min-height: 90vh;
  overflow: hidden;
}

/* BACKGROUND IMAGE */
.aiasa-bg {
  position: absolute;
  inset: 0;
  width: 100%;
  height: 100%;
  object-fit: cover;
}

/* GRADIENT OVERLAY — IMAGE CLEAR */
.aiasa-overlay {
  position: absolute;
  inset: 0;
  background: linear-gradient(
    90deg,
    rgba(159, 211, 255, 0.85) 0%,
    rgba(159, 211, 255, 0.6) 45%,
    rgba(159, 211, 255, 0.2) 75%,
    rgba(159, 211, 255, 0) 100%
  );
}

/* CONTENT */
.aiasa-content {
  position: relative;
  z-index: 2;
  max-width: 1400px;
  margin: auto;
  padding: 140px 60px;
  display: grid;
  grid-template-columns: 1.2fr 0.8fr;
  align-items: center;
  gap: 60px;
}

/* LEFT TEXT */
.aiasa-breadcrumb {
  font-size: 14px;
  font-weight: 600;
  color: #ffffff;
  margin-bottom: 18px;
  display: inline-block;
}

.aiasa-left h1 {
  font-size: 56px;
  font-weight: 900;
  line-height: 1.1;
  color: #ffffff;
  max-width: 720px;
}

/* RIGHT IMAGE */
.aiasa-right img {
  width: 100%;
  max-width: 520px;
  image-rendering: -webkit-optimize-contrast;
}

/* MOBILE */
@media (max-width: 900px) {
  .aiasa-content {
    grid-template-columns: 1fr;
    padding: 100px 25px;
  }

  .aiasa-left h1 {
    font-size: 36px;
  }

  .aiasa-right {
    margin-top: 40px;
  }
}
</style>
