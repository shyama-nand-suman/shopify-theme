    {% schema %}
{
  "name": "Our Purpose Box",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Our Purpose:"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "To amplify human potential and create the next opportunity for people, businesses and communities"
    }
  ],
  "presets": [
    {
      "name": "Our Purpose"
    }
  ]
}
{% endschema %}

<section class="purpose-section">
  <div class="purpose-box">
    <h2>{{ section.settings.title }}</h2>
    <p>{{ section.settings.description }}</p>
  </div>
</section>

<style>
/* ===============================
   OUR PURPOSE SECTION
================================ */
.purpose-section {
  padding: 80px 20px;
  background: #ffffff;
}

.purpose-box {
  max-width: 1200px;
  margin: 0 auto;
  padding: 60px 80px;
  border: 2px solid #9fd0ff;
  border-radius: 0;
  position: relative;
  text-align: center;
}

/* cut-corner effect */
.purpose-box::before,
.purpose-box::after {
  content: "";
  position: absolute;
  width: 30px;
  height: 30px;
  background: #ffffff;
}

.purpose-box::before {
  top: -2px;
  right: -2px;
  border-top: 2px solid #9fd0ff;
  border-right: 2px solid #9fd0ff;
  transform: rotate(45deg) translate(14px, -14px);
}

.purpose-box::after {
  bottom: -2px;
  left: -2px;
  border-bottom: 2px solid #9fd0ff;
  border-left: 2px solid #9fd0ff;
  transform: rotate(45deg) translate(-14px, 14px);
}

.purpose-box h2 {
  font-size: 42px;
  font-weight: 800;
  margin-bottom: 25px;
  color: #000000;
}

.purpose-box p {
  font-size: 26px;
  font-weight: 500;
  line-height: 1.4;
  color: #000000;
  max-width: 900px;
  margin: 0 auto;
}

/* ===============================
   MOBILE
================================ */
@media (max-width: 768px) {
  .purpose-box {
    padding: 40px 25px;
  }

  .purpose-box h2 {
    font-size: 32px;
  }

  .purpose-box p {
    font-size: 20px;
  }
}
</style>
