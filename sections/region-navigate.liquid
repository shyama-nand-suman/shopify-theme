{% schema %}
{
  "name": "Region Navigator",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Right Heading",
      "default": "Let's help you navigate your next"
    },
    {
      "type": "url",
      "id": "btn_link",
      "label": "Button Link"
    }
  ],
  "presets": [
    {
      "name": "Region Navigator"
    }
  ]
}
{% endschema %}

<section class="region-section">
  <div class="region-wrapper">

    <!-- LEFT BOX GRID -->
    <div class="region-grid">
      <div class="region-box active">Americas</div>
      <div class="region-box">Asia Pacific</div>
      <div class="region-box">Europe</div>
      <div class="region-box">Middle East and Africa</div>
    </div>

    <!-- RIGHT CONTENT -->
    <div class="region-content">
      <h2>{{ section.settings.heading }}</h2>

      <a href="{{ section.settings.btn_link }}" class="region-btn">
        CONTACT US
      </a>
    </div>

  </div>
</section>

<style>
/* ===============================
   REGION NAVIGATOR
================================ */
.region-section {
  background: #8e3a93;
  padding: 120px 0;
}

.region-wrapper {
  max-width: 1300px;
  margin: 0 auto;
  display: grid;
  grid-template-columns: 55% 45%;
  align-items: center;
  gap: 80px;
}

/* LEFT GRID */
.region-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  border: 1px solid rgba(255,255,255,0.25);
}

.region-box {
  padding: 80px 40px;
  text-align: center;
  color: #ffffff;
  font-size: 22px;
  font-weight: 600;
  cursor: pointer;
  border-right: 1px solid rgba(255,255,255,0.25);
  border-bottom: 1px solid rgba(255,255,255,0.25);
  transition: all 0.35s ease;
}

/* REMOVE EXTRA BORDERS */
.region-box:nth-child(2),
.region-box:nth-child(4) {
  border-right: none;
}

.region-box:nth-child(3),
.region-box:nth-child(4) {
  border-bottom: none;
}

/* HOVER */
.region-box:hover {
  background: rgba(255,255,255,0.15);
}

/* ACTIVE (CLICK) */
.region-box.active {
  background: #ffffff;
  color: #000000;
}

/* RIGHT CONTENT */
.region-content h2 {
  font-size: 56px;
  font-weight: 800;
  line-height: 1.15;
  color: #ffffff;
  margin-bottom: 40px;
}

.region-btn {
  display: inline-block;
  padding: 16px 40px;
  background: #000000;
  color: #ffffff;
  font-weight: 700;
  text-decoration: none;
  letter-spacing: 1px;
}

/* ===============================
   MOBILE
================================ */
@media (max-width: 900px) {
  .region-wrapper {
    grid-template-columns: 1fr;
    gap: 60px;
  }

  .region-content h2 {
    font-size: 38px;
  }
}
</style>

<script>
document.addEventListener("DOMContentLoaded", function () {
  const boxes = document.querySelectorAll(".region-box");

  boxes.forEach(box => {
    box.addEventListener("click", () => {
      boxes.forEach(b => b.classList.remove("active"));
      box.classList.add("active");
    });
  });
});
</script>
