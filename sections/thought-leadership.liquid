================================ */

.aiasa-thought {
  background: #3b2468;
  padding: 100px 60px;
  color: #ffffff;
}

.aiasa-thought-inner {
  max-width: 1200px;
  margin: auto;
}

/* HEADER */
.aiasa-thought-header {
  text-align: center;
  margin-bottom: 60px;
}

.aiasa-thought-header h2 {
  font-size: 32px;
  font-weight: 700;
}

.aiasa-thought-header p {
  font-size: 16px;
  margin-top: 10px;
  opacity: 0.9;
}

/* GRID */
.aiasa-thought-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 20px;
}

/* CARD */
.aiasa-thought-card {
  background: #ffffff;
  color: #000;
}

/* IMAGE */
.aiasa-thought-card img {
  width: 100%;
  height: 200px;
  object-fit: cover;
  display: block;
}

/* TITLE LINK (UNDERLINE) */
.aiasa-thought-link {
  display: inline-block;
  padding: 18px;
  font-size: 14px;
  font-weight: 600;
  color: #000;
  text-decoration: underline;
}

/* BUTTON */
.aiasa-thought-btn {
  text-align: center;
  margin-top: 50px;
}

.aiasa-thought-btn a {
  display: inline-block;
  padding: 12px 30px;
  border: 1px solid #ffffff;
  color: #ffffff;
  text-decoration: none;
  font-size: 13px;
  font-weight: 700;
}

/* MOBILE */
@media (max-width: 900px) {
  .aiasa-thought {
    padding: 70px 25px;
  }

  .aiasa-thought-grid {
    grid-template-columns: 1fr;
  }
}
</style>
