{% schema %}
{
  "name": "Thought Leadership",
  "enabled_on": { "templates": ["page"] },
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Thought Leadership"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "Our leaders share insights on Live Enterprise"
    }
  ],
  "blocks": [
    {
      "type": "card",
      "name": "Leadership Card",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Card Image"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Article title goes here"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link"
        }
      ]
    }
  ],
  "max_blocks": 4,
  "presets": [
    {
      "name": "Thought Leadership",
      "blocks": [
        { "type": "card" },
        { "type": "card" },
        { "type": "card" },
        { "type": "card" }
      ]
    }
  ]
}
{% endschema %}

<section class="aiasa-thought">
  <div class="aiasa-thought-inner">

    <!-- HEADER -->
    <div class="aiasa-thought-header">
      <h2>{{ section.settings.heading }}</h2>
      <p>{{ section.settings.subheading }}</p>
    </div>

    <!-- CARDS -->
    <div class="aiasa-thought-grid">
      {% for block in section.blocks %}
        <div class="aiasa-thought-card" {{ block.shopify_attributes }}>

          {% if block.settings.image %}
            {% assign img = block.settings.image %}
            <img
              src="{{ img | image_url: width: 600 }}"
              width="{{ img.width }}"
              height="{{ img.height }}"
              alt="{{ block.settings.title }}"
              loading="lazy"
            >
          {% endif %}

          {% if block.settings.link != blank %}
            <a href="{{ block.settings.link }}" class="aiasa-thought-link">
              {{ block.settings.title }}
            </a>
          {% else %}
            <span class="aiasa-thought-link">
              {{ block.settings.title }}
            </span>
          {% endif %}

        </div>
      {% endfor %}
    </div>

    <!-- BUTTON -->
    <div class="aiasa-thought-btn">
      <a href="#">SEE MORE</a>
    </div>

  </div>
</section>

<style>
/* ===============================
